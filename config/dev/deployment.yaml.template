apiVersion: v1
kind: Service
metadata:
  name: moments
spec:
  selector:
    app: moments
  ports:
    - port: 8080
      targetPort: 8080
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: moments
spec:
  replicas: 1
  selector:
    matchLabels:
      app: moments
  template:
    metadata:
      labels:
        app: moments
    spec:
      containers:
        - name: moments
          image: moments:{{version}}
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8080
          volumeMounts:
            - name: moments-application-config
              mountPath: /app/config
      volumes:
        - name: moments-application-config
          configMap:
            name: moments-config